        {
          "Host": "localhost",
          "Port": "5001"
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "employees_auth_scheme",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamPathTemplate": "/Employee",
      "UpstreamHttpMethod": [ "Post","Put" ],
